<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
    <key>CFBundleShortVersionString</key>
    <string>$(MARKETING_VERSION)</string>
    <key>CFBundleVersion</key>
    <string>$(CURRENT_PROJECT_VERSION)</string>
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.procrastinaut.oauth</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>procrastinaut</string>
            </array>
        </dict>
    </array>
    <key>CFBundleIconName</key>
    <string>AppIcon</string>
    <key>LSUIElement</key>
    <true/>
    <key>NSCalendarsUsageDescription</key>
    <string>ProcrastiNaut needs access to your calendars to find free time slots and create time blocks for your tasks.</string>
    <key>NSRemindersUsageDescription</key>
    <string>ProcrastiNaut needs access to your reminders to scan for open tasks and schedule them.</string>
    <key>NSCalendarsFullAccessUsageDescription</key>
    <string>ProcrastiNaut needs full calendar access to create and manage time blocks for your tasks.</string>
    <key>NSRemindersFullAccessUsageDescription</key>
    <string>ProcrastiNaut needs full reminders access to read your tasks and mark them as complete.</string>
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>ProcrastiNaut uses speech recognition to let you create events and reminders by voice.</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>ProcrastiNaut needs microphone access for voice input in the chat bar.</string>
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>ProcrastiNaut uses your location to show local weather on your calendar.</string>
    <key>SUFeedURL</key>
    <string>https://raw.githubusercontent.com/procrastinaut/procrastinaut/main/appcast.xml</string>
    <key>SUPublicEDKey</key>
    <string></string>
</dict>
</plist>
